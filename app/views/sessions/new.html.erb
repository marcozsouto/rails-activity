<p id="alert"><%= alert %></p>
<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username , params[:username], :id => "username"%>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], :id => "password" %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", :id => "login" %>
  </div>
  <%= link_to 'Back', root_url %>
<% end %>